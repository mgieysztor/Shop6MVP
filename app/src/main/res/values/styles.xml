<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryTextView">
        <item name="android:textColor">@color/primaryTextViewColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecendaryTextView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/secondaryTextViewColor</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
