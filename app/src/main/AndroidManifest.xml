<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.offcasoftware.shop2">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <application
            android:name=".AndroidApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.ProductDetailsActivity"/>
        <activity android:name=".view.AddProductActivity"/>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version"/>

        <activity android:name=".view.StorageActivity">
        </activity>
        <activity android:name=".view.widget.TestStorageActivity">
        </activity>
        <activity android:name=".view.Test">
        </activity>
        <activity android:name=".view.FragmentTestActivity">
        </activity>
        <activity android:name=".view.widget.FagmentCommunicationActivity">
        </activity>
        <activity android:name=".view.ProductPagerActivity">
        </activity>
        <activity android:name=".view.ContactsActivity">
        </activity>

        <provider android:authorities="com.offcasoftware.shop2.provider"
                  android:name=".provider.ProductProvider"/>
    </application>

</manifest>